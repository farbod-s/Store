<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_drawer_item_profile"
    android:paddingLeft="@dimen/material_drawer_vertical_padding"
    android:paddingRight="@dimen/material_drawer_vertical_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/material_drawer_item_profile_setting_icon"
        android:layout_height="@dimen/material_drawer_item_profile_setting_icon"
        android:layout_marginTop="@dimen/material_drawer_item_profile_setting_icon_padding"
        android:layout_marginBottom="@dimen/material_drawer_item_profile_setting_icon_padding"
        android:layout_marginLeft="@dimen/material_drawer_item_profile_setting_icon_padding_right"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/name"
        android:layout_toLeftOf="@id/icon"
        android:textAppearance="@style/TextAppearance.Bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/material_drawer_item_profile_text"
        android:gravity="center_vertical|right"
        android:lines="1"
        android:singleLine="true"
        tools:text="Some drawer text" />
</RelativeLayout>