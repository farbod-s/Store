<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="0dp">

    <LinearLayout
        android:id="@+id/item_order_header_view"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="16dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="15.0sp"
                android:text="سفارش شماره"
                android:textColor="@color/primary_text"
                android:textAppearance="@style/TextAppearance.Bold"
                android:gravity="right"
                android:id="@+id/item_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <TextView
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="15.0sp"
                android:text="2341"
                android:textColor="@color/primary_text"
                android:textAppearance="@style/TextAppearance.Bold"
                android:gravity="right"
                android:id="@+id/item_order_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_order_title"
                android:layout_toRightOf="@+id/item_order_view_link" />

            <TextView
                android:gravity="center"
                android:textColor="@color/link_text"
                android:text="مشاهده"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.Bold"
                android:id="@+id/item_order_view_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <View
            android:layout_marginBottom="4dp"
            android:background="#ccc"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip" />

        <LinearLayout
            android:weightSum="9"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="3"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="مجموع"
                    android:textSize="12sp"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="#ffb1b4b7"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/item_order_total_price"
                    android:text="200000 تومان"
                    android:textSize="14sp"
                    android:textColor="#ff343943"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="تاریخ"
                    android:textSize="12sp"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="#ffb1b4b7"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/item_order_date"
                    android:text="2 مرداد 94 ساعت 14:45"
                    android:textSize="14sp"
                    android:textColor="#ff343943"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="وضعیت"
                    android:textSize="12sp"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="#ffb1b4b7"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/item_order_status"
                    android:text="تکمیل شده"
                    android:textSize="14sp"
                    android:textColor="#ff343943"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_item_quantity_layout"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:weightSum="2"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="تعداد"
                    android:textSize="12sp"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="#ffb1b4b7"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:maxLines="1"
                    android:layout_weight="1" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/item_order_count"
                    android:text="1"
                    android:textSize="14sp"
                    android:textColor="#ff343943"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:maxLines="1"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>