<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="0dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.shopping.materialdrawer.view.BezelImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/comment_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:elevation="2dp"
            android:layout_margin="4dp"
            android:src="@drawable/profile1"
            app:biv_maskDrawable="@drawable/circle_mask" />

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_toLeftOf="@+id/comment_avatar"
            android:layout_alignParentLeft="true"
            android:gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/comment_username"
                android:gravity="right"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="فربد صمصامی پور"
                android:textColor="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/comment_text"
                android:gravity="right"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@string/dummy_text_description_long"
                android:textColor="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>