<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_collection_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    card_view:cardCornerRadius="2dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="0dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="246.66dp">

            <ImageView
                android:id="@+id/item_collection_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:background="@drawable/card_overlay"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_collection_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@color/md_white_1000"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentBottom="true"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="18sp" />

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:weightSum="4"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.shopping.app.ui.widget.SquareLayout
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_collection_image_more_1"
                android:background="@color/md_grey_200"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            </com.example.shopping.app.ui.widget.SquareLayout>

            <com.example.shopping.app.ui.widget.SquareLayout
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_collection_image_more_2"
                    android:background="@color/md_grey_200"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </com.example.shopping.app.ui.widget.SquareLayout>

            <com.example.shopping.app.ui.widget.SquareLayout
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_collection_image_more_3"
                    android:background="@color/md_grey_200"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </com.example.shopping.app.ui.widget.SquareLayout>

            <com.example.shopping.app.ui.widget.SquareLayout
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_collection_image_more_4"
                    android:background="@color/md_grey_200"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </com.example.shopping.app.ui.widget.SquareLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>